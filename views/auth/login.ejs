


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card border-0 shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h1 class="h3 fw-bold">Welcome Back</h1>
                        <p class="text-muted">Sign in to your Pivot account</p>
                    </div>

                    <form action="/auth/login" method="POST">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>

                        <div class="mb-4">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Sign In
                            </button>
                        </div>
                    </form>

                    <div class="text-center mb-3">
                        <span class="text-muted">or continue with</span>
                    </div>

                    <div class="row g-2 mb-4">
                        <div class="col-6">
                            <a href="/auth/github" class="btn btn-outline-dark w-100">
                                <i class="bi bi-github"></i> GitHub
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="/auth/google" class="btn btn-outline-danger w-100">
                                <i class="bi bi-google"></i> Google
                            </a>
                        </div>
                    </div>

                    <div class="text-center">
                        <p class="text-muted">
                            Don't have an account? 
                            <a href="/auth/register" class="text-decoration-none">Create one here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
