<div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            <h3 class="text-center">Login</h3>
          </div>
          <div class="card-body">
            <!-- Mensagens de erro/sucesso -->
            <% if (messages.error) { %>
              <div class="alert alert-danger">
                <%= messages.error %>
              </div>
            <% } %>
            
            <% if (messages.success) { %>
              <div class="alert alert-success">
                <%= messages.success %>
              </div>
            <% } %>
  
            <!-- Login local -->
            <form action="/auth/login" method="POST">
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Senha</label>
                <input type="password" class="form-control" id="password" name="password" required>
              </div>
              <button type="submit" class="btn btn-primary w-100">Entrar</button>
            </form>
  
            <hr>
  
            <!-- OAuth buttons (apenas se disponível) -->
            <% if (isGoogleAvailable) { %>
              <a href="/auth/google" class="btn btn-danger w-100 mb-2">
                <i class="fab fa-google"></i> Entrar com Google
              </a>
            <% } %>
  
            <% if (isGitHubAvailable) { %>
              <a href="/auth/github" class="btn btn-dark w-100 mb-2">
                <i class="fab fa-github"></i> Entrar com GitHub
              </a>
            <% } %>
  
            <% if (!isGoogleAvailable && !isGitHubAvailable) { %>
              <p class="text-muted text-center">
                <small>OAuth não configurado neste ambiente</small>
              </p>
            <% } %>
  
            <div class="text-center mt-3">
              <p>Não tem uma conta? <a href="/auth/register">Cadastre-se</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>