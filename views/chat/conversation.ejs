


<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Chat Header -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <a href="/chat" class="btn btn-outline-secondary btn-sm me-3">
                            <i class="bi bi-arrow-left"></i>
                        </a>
                        <div class="profile-avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                             style="width: 40px; height: 40px;">
                            <% 
                            const otherUserPicture = match.collaborator_id === user.id ? match.idealizer_picture : match.collaborator_picture;
                            const otherUserFirstName = match.collaborator_id === user.id ? match.idealizer_first_name : match.collaborator_first_name;
                            const otherUserLastName = match.collaborator_id === user.id ? match.idealizer_last_name : match.collaborator_last_name;
                            %>
                            <% if (otherUserPicture) { %>
                                <img src="<%= otherUserPicture %>" alt="Profile" class="rounded-circle w-100 h-100 object-fit-cover">
                            <% } else { %>
                                <%= otherUserFirstName ? otherUserFirstName.charAt(0) : 'U' %>
                            <% } %>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="fw-bold mb-1">
                                <a href="/profile/view/<%= otherUserId %>" class="text-decoration-none">
                                    <%= otherUserFirstName %> <%= otherUserLastName %>
                                </a>
                            </h6>
                            <p class="text-muted small mb-0">
                                <i class="bi bi-folder me-1"></i>
                                <a href="/projects/view/<%= match.project_id %>" class="text-decoration-none">
                                    <%= match.project_title %>
                                </a>
                            </p>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="/projects/view/<%= match.project_id %>" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-folder"></i> Project
                            </a>
                            <a href="/profile/view/<%= otherUserId %>" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-person"></i> Profile
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Chat Messages -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div id="messages-container" class="p-4" style="height: 500px; overflow-y: auto;">
                        <% if (messages && messages.length > 0) { %>
                            <% messages.forEach(function(message) { %>
                                <div class="message-item mb-3 <%= message.sender_id == user.id ? 'text-end' : '' %>">
                                    <div class="d-inline-block">
                                        <div class="message-bubble p-3 rounded-3 <%= message.sender_id == user.id ? 'bg-primary text-white' : 'bg-light' %>" 
                                             style="max-width: 70%;">
                                            <p class="mb-1"><%= message.message %></p>
                                            <small class="<%= message.sender_id == user.id ? 'text-white-50' : 'text-muted' %>">
                                                <%= new Date(message.created_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                                            </small>
                                        </div>
                                        <% if (message.sender_id != user.id) { %>
                                            <div class="mt-1">
                                                <small class="text-muted">
                                                    <%= message.first_name %> <%= message.last_name %>
                                                </small>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="bi bi-chat-dots display-4 text-muted mb-3"></i>
                                <h5 class="text-muted">Start the conversation</h5>
                                <p class="text-muted">Send a message to begin collaborating on this project</p>
                            </div>
                        <% } %>
                    </div>
                    
                    <!-- Typing Indicator -->
                    <div id="typing-indicator" class="px-4 pb-2" style="display: none;">
                        <div class="d-flex align-items-center text-muted">
                            <div class="typing-dots me-2">
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                            <small><span id="typing-user"></span> is typing...</small>
                        </div>
                    </div>
                    
                    <!-- Message Input -->
                    <div class="border-top p-3">
                        <form id="message-form" class="d-flex gap-2">
                            <input type="text" id="message-input" class="form-control" 
                                   placeholder="Type your message..." required>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.object-fit-cover {
    object-fit: cover;
}

.message-bubble {
    word-wrap: break-word;
    display: inline-block;
}

#messages-container {
    scroll-behavior: smooth;
}

.typing-dots {
    display: inline-flex;
    gap: 2px;
}

.typing-dots span {
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background-color: #6c757d;
    animation: typing 1.4s infinite ease-in-out;
}

.typing-dots span:nth-child(1) { animation-delay: -0.32s; }
.typing-dots span:nth-child(2) { animation-delay: -0.16s; }

@keyframes typing {
    0%, 80%, 100% { transform: scale(0); }
    40% { transform: scale(1); }
}
</style>

<script>
// Socket.io connection
const socket = io();
const conversationId = <%= conversation.id %>;
const currentUserId = <%= user.id %>;
const otherUserName = '<%= otherUserFirstName %> <%= otherUserLastName %>';

// Join conversation room
socket.emit('join-conversation', conversationId);

// Message form handling
const messageForm = document.getElementById('message-form');
const messageInput = document.getElementById('message-input');
const messagesContainer = document.getElementById('messages-container');
const typingIndicator = document.getElementById('typing-indicator');

messageForm.addEventListener('submit', function(e) {
    e.preventDefault();
    
    const message = messageInput.value.trim();
    if (!message) return;
    
    // Send message via socket
    socket.emit('send-message', {
        conversationId: conversationId,
        senderId: currentUserId,
        message: message
    });
    
    messageInput.value = '';
});

// Listen for new messages
socket.on('new-message', function(data) {
    addMessageToChat(data);
    scrollToBottom();
});

// Typing indicators
let typingTimer;
messageInput.addEventListener('input', function() {
    socket.emit('typing', {
        conversationId: conversationId,
        userId: currentUserId,
        isTyping: true
    });
    
    clearTimeout(typingTimer);
    typingTimer = setTimeout(() => {
        socket.emit('typing', {
            conversationId: conversationId,
            userId: currentUserId,
            isTyping: false
        });
    }, 1000);
});

socket.on('user-typing', function(data) {
    if (data.userId !== currentUserId) {
        if (data.isTyping) {
            document.getElementById('typing-user').textContent = otherUserName;
            typingIndicator.style.display = 'block';
        } else {
            typingIndicator.style.display = 'none';
        }
    }
});

function addMessageToChat(message) {
    const isOwnMessage = message.sender_id == currentUserId;
    const messageHtml = `
        <div class="message-item mb-3 ${isOwnMessage ? 'text-end' : ''}">
            <div class="d-inline-block">
                <div class="message-bubble p-3 rounded-3 ${isOwnMessage ? 'bg-primary text-white' : 'bg-light'}" 
                     style="max-width: 70%;">
                    <p class="mb-1">${escapeHtml(message.message)}</p>
                    <small class="${isOwnMessage ? 'text-white-50' : 'text-muted'}">
                        ${new Date(message.created_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}
                    </small>
                </div>
                ${!isOwnMessage ? `
                    <div class="mt-1">
                        <small class="text-muted">${otherUserName}</small>
                    </div>
                ` : ''}
            </div>
        </div>
    `;
    
    messagesContainer.insertAdjacentHTML('beforeend', messageHtml);
}

function scrollToBottom() {
    messagesContainer.scrollTop = messagesContainer.scrollHeight;
}

function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}

// Scroll to bottom on load
window.addEventListener('load', scrollToBottom);
</script>
