<div class="d-flex justify-content-between align-items-center">
    <a href="/projects/view/<%= project.id %>" class="btn btn-outline-primary btn-sm">
        <i class="bi bi-eye"></i> Ver Detalhes
    </a>
    <% if (user.user_type === 'collaborator') { %>
    <% if (projectInterests && projectInterests[project.id]) { %>
    <span class="badge bg-success">
        <i class="bi bi-check"></i> Interesse Demonstrado
    </span>
    <% } else { %>
    <button class="btn btn-success btn-sm" onclick="showInterest(<%= project.id %>)">
        <i class="bi bi-heart"></i> Mostrar Interesse
    </button>
    <% } %>
    <% } %>
</div>