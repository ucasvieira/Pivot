


<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 fw-bold mb-1">Discover Projects</h1>
                    <p class="text-muted mb-0">Find exciting projects to collaborate on</p>
                </div>
                <% if (user.user_type === 'idealizer') { %>
                    <a href="/projects/create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create Project
                    </a>
                <% } %>
            </div>

            <% if (projects && projects.length > 0) { %>
                <div class="row g-4">
                    <% projects.forEach(function(project) { %>
                        <div class="col-lg-6">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body p-4">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="fw-bold mb-0">
                                            <a href="/projects/view/<%= project.id %>" class="text-decoration-none">
                                                <%= project.title %>
                                            </a>
                                        </h5>
                                        <span class="badge bg-<%= project.status === 'active' ? 'success' : 'secondary' %>">
                                            <%= project.status %>
                                        </span>
                                    </div>
                                    
                                    <p class="text-muted mb-3">
                                        <%= project.description.length > 150 ? project.description.substring(0, 150) + '...' : project.description %>
                                    </p>
                                    
                                    <div class="row g-2 mb-3">
                                        <div class="col-sm-6">
                                            <small class="text-muted">
                                                <i class="bi bi-person me-1"></i>
                                                by <%= project.first_name %> <%= project.last_name %>
                                            </small>
                                        </div>
                                        <div class="col-sm-6">
                                            <small class="text-muted">
                                                <i class="bi bi-geo-alt me-1"></i>
                                                <%= project.idealizer_location || project.location_preference || 'Remote' %>
                                            </small>
                                        </div>
                                        <div class="col-sm-6">
                                            <small class="text-muted">
                                                <i class="bi bi-clock me-1"></i>
                                                <%= project.timeline %>
                                            </small>
                                        </div>
                                        <div class="col-sm-6">
                                            <small class="text-muted">
                                                <i class="bi bi-calendar me-1"></i>
                                                <%= new Date(project.created_at).toLocaleDateString() %>
                                            </small>
                                        </div>
                                    </div>
                                    
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a href="/projects/view/<%= project.id %>" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i> View Details
                                        </a>
                                        <% if (user.user_type === 'collaborator') { %>
                                            <button class="btn btn-success btn-sm" onclick="showInterest(<%= project.id %>)">
                                                <i class="bi bi-heart"></i> Show Interest
                                            </button>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="bi bi-folder-x display-1 text-muted mb-3"></i>
                    <h3 class="text-muted">No projects found</h3>
                    <p class="text-muted">Check back later for new opportunities</p>
                    <% if (user.user_type === 'idealizer') { %>
                        <a href="/projects/create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Create Your First Project
                        </a>
                    <% } else { %>
                        <a href="/match/swipe" class="btn btn-primary">
                            <i class="bi bi-heart"></i> Start Swiping
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script>
function showInterest(projectId) {
    // This would typically make an AJAX call to express interest
    // For now, redirect to the project view page
    window.location.href = `/projects/view/${projectId}`;
}
</script>
