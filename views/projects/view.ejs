<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Project Header -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="flex-grow-1">
                            <h1 class="h3 fw-bold mb-2"><%= project.title %></h1>
                            <div class="d-flex align-items-center gap-3 text-muted">
                                <span>
                                    <i class="bi bi-person me-1"></i>
                                    by <a href="/profile/view/<%= project.idealizer_id %>" class="text-decoration-none">
                                        <%= project.first_name %> <%= project.last_name %>
                                    </a>
                                </span>
                                <span>
                                    <i class="bi bi-calendar me-1"></i>
                                    <%= new Date(project.created_at).toLocaleDateString() %>
                                </span>
                            </div>
                        </div>
                        <div class="text-end">
                            <span class="badge bg-<%= project.status === 'active' ? 'success' : project.status === 'completed' ? 'primary' : 'secondary' %> mb-2">
                                <%= project.status.charAt(0).toUpperCase() + project.status.slice(1) %>
                            </span>
                            <% if (isOwner) { %>
                                <div>
                                    <a href="/projects/edit/<%= project.id %>" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Project Details -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h3 class="h5 fw-bold mb-3">
                        <i class="bi bi-file-text text-primary me-2"></i>Project Description
                    </h3>
                    <p class="mb-0"><%= project.description %></p>
                </div>
            </div>

            <!-- Project Objectives -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h3 class="h5 fw-bold mb-3">
                        <i class="bi bi-target text-success me-2"></i>Objectives
                    </h3>
                    <p class="mb-0"><%= project.objectives %></p>
                </div>
            </div>

            <!-- Project Info -->
            <div class="row g-4 mb-4">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body p-4 text-center">
                            <i class="bi bi-clock display-6 text-warning mb-3"></i>
                            <h5 class="fw-bold">Timeline</h5>
                            <p class="text-muted mb-0"><%= project.timeline %></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body p-4 text-center">
                            <i class="bi bi-geo-alt display-6 text-info mb-3"></i>
                            <h5 class="fw-bold">Location</h5>
                            <p class="text-muted mb-0"><%= project.location_preference %></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Required Skills -->
            <% if (projectSkills && projectSkills.length > 0) { %>
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h3 class="h5 fw-bold mb-3">
                            <i class="bi bi-tools text-danger me-2"></i>Required Skills
                        </h3>
                        <% 
                        const skillsByCategory = {};
                        projectSkills.forEach(skill => {
                            if (!skillsByCategory[skill.category]) {
                                skillsByCategory[skill.category] = [];
                            }
                            skillsByCategory[skill.category].push(skill);
                        });
                        %>
                        <% Object.keys(skillsByCategory).forEach(category => { %>
                            <div class="mb-3">
                                <h6 class="text-muted mb-2"><%= category %></h6>
                                <div class="d-flex flex-wrap gap-2">
                                    <% skillsByCategory[category].forEach(skill => { %>
                                        <span class="badge bg-light text-dark border">
                                            <%= skill.name %>
                                            <small class="text-muted">(<%= skill.required_level %>)</small>
                                        </span>
                                    <% }); %>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% } %>

            <!-- Action Buttons -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex gap-3 justify-content-center">
                        <% if (!isOwner && user.user_type === 'collaborator') { %>
                            <% if (hasAlreadyShownInterest) { %>
                                <!-- Se já demonstrou interesse, mostrar status -->
                                <div class="alert alert-success mb-0 flex-fill text-center">
                                    <i class="bi bi-check-circle me-2"></i>
                                    You've already shown interest in this project
                                </div>
                            <% } else { %>
                                <!-- Se não demonstrou interesse, mostrar botão -->
                                <button class="btn btn-success btn-lg" onclick="showInterest()">
                                    <i class="bi bi-heart-fill"></i> Show Interest
                                </button>
                            <% } %>
                        <% } %>
                        
                        <% if (isOwner) { %>
                            <a href="/projects/edit/<%= project.id %>" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit Project
                            </a>
                            <a href="/match/matches" class="btn btn-outline-success">
                                <i class="bi bi-people"></i> View Matches
                            </a>
                        <% } %>
                        
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function showInterest() {
    // Redirecionar para a página de swipe para registrar interesse adequadamente
    alert('Redirecting to swipe page to register your interest properly...');
    window.location.href = '/match/swipe';
}
</script>